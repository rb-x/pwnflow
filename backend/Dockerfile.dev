FROM python:3.12-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install uv
COPY --from=ghcr.io/astral-sh/uv:latest /uv /bin/uv

# Copy shared schemas so they are available for dependency installation
COPY packages/ai-schemas ./packages/ai-schemas

# Copy dependency files
COPY backend/pyproject.toml backend/pyproject.toml

# Install dependencies
WORKDIR /app/backend
RUN uv pip install --system -r pyproject.toml --extra dev

# Copy application code (will be overridden by volume mount)
COPY backend/ .

# Expose port
EXPOSE 8000

# Command will be overridden in docker-compose.dev.yml
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
